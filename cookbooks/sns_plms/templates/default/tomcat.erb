#!/bin/sh
export JAVA_OPTS=<%= node["sns_plms"]["java_options"] %>
export CATALINA_OPTS=<%= node["sns_plms"]["java_options"] %>
export JAVA_HOME=<%= node["sns_plms"]["java_home"] %>
case "$1" in
start)
  <%= node["sns_plms"]["tomcat_install_loc"] %>/bin/startup.sh
;;
stop)
  <%= node["sns_plms"]["tomcat_install_loc"] %>/bin/shutdown.sh
;;
*)
  echo "Syntax: $0 <start|stop>"
esac 